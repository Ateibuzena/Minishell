NAME = parser.a

CC = gcc

CFLAGS = -Wall -Wextra -Werror -I. -I../pipex -I../libft 

AR = ar rcs
RM = rm -f

# ğŸ“‚ LibrerÃ­as externas
LIBFT_DIR = ../libft	
LIBFT_LIB = $(LIBFT_DIR)/libft.a

PIPEX_DIR = ../pipex
PIPEX_LIB = $(PIPEX_DIR)/pipex.a

# ğŸ“‚ Directorios de cÃ³digo y objetos
SRCDIR = src
OBJDIR = obj

# ğŸ” Buscar archivos fuente en subdirectorios
SRCS := $(shell find $(SRCDIR) -type f -name "*.c")
OBJS := $(SRCS:$(SRCDIR)/%.c=$(OBJDIR)/%.o)

HEADERS = parserft.h

# ğŸ¨ Colores
RED      = \033[0;31m
GREEN    = \033[0;32m
YELLOW   = \033[0;33m
MAGENTA  = \033[0;35m
CYAN     = \033[0;36m
WHITE    = \033[0;37m
RESET    = \033[0m

# ğŸš€ CompilaciÃ³n principal
all: libs $(NAME)

# ğŸ”— Compilar librerÃ­as en orden correcto
libs:
	@echo "$(CYAN)ğŸ“¦ Compilando librerÃ­as...$(RESET)"
	@make --no-print-directory -C $(LIBFT_DIR)
	@echo "$(CYAN)------------------------------------------------------------$(RESET)"
	@make --no-print-directory -C $(PIPEX_DIR)
	@echo "$(CYAN)------------------------------------------------------------$(RESET)"
	@echo "$(GREEN)âœ… LibrerÃ­as compiladas.$(RESET)"

# ğŸ”¨ Crear archivo .a (builtins.a)
$(NAME): $(OBJDIR) $(OBJS)
	@echo "$(CYAN)ğŸ”— Creando $(NAME)...$(RESET)"
	@$(AR) $(NAME) $(OBJS)
	@echo "$(GREEN)âœ… $(NAME) creado con Ã©xito.$(RESET)"

# ğŸ“‚ Crear directorio de objetos
$(OBJDIR):
	@echo "$(CYAN)ğŸ“‚ Creando directorios de objetos...$(RESET)"
	@mkdir -p $(OBJDIR)
	@echo "$(GREEN)âœ… Directorios de objetos creados.$(RESET)"

# ğŸ— Compilar archivos `.c` en `.o`, respetando subdirectorios
$(OBJDIR)/%.o: $(SRCDIR)/%.c $(HEADERS) | $(OBJDIR)
	@mkdir -p $(dir $@)
	@echo "$(YELLOW)ğŸ”¹ Compilando $< -> $@$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(GREEN)âœ… Compilado: $@$(RESET)"

# ğŸ§¹ Limpieza de objetos
clean:
	@echo "$(RED)ğŸ—‘ï¸  Eliminando archivos objeto...$(RESET)"
	@$(RM) $(OBJS)
	@echo "$(MAGENTA)âœ… Limpieza de objetos completada.$(RESET)"
	@if [ -d "$(OBJDIR)" ]; then \
		echo "$(RED)ğŸš® Eliminando directorio de objetos...$(RESET)"; \
		$(RM) -rf $(OBJDIR); \
		echo "$(MAGENTA)âœ… Directorio obj eliminado.$(RESET)"; \
	fi

# ğŸ§¹ Limpieza total (elimina objetos y archivo .a)
fclean: clean
	@if [ -f "$(NAME)" ]; then \
		echo "$(RED)ğŸš® Eliminando archivo $(NAME)...$(RESET)"; \
		$(RM) $(NAME); \
		echo "$(MAGENTA)âœ… $(NAME) eliminado.$(RESET)"; \
	fi
	@if [ -f "$(PIPEX_LIB)" ]; then \
		echo "$(RED)ğŸš® Eliminando librerÃ­a externa $(PIPEX_LIB)...$(RESET)"; \
		make -C $(PIPEX_DIR) fclean; \
		echo "$(MAGENTA)âœ… LibrerÃ­a $(PIPEX_LIB) eliminada.$(RESET)"; \
	fi
	@if [ -f "$(LIBFT_LIB)" ]; then \
		echo "$(RED)ğŸš® Eliminando librerÃ­a externa $(LIBFT_LIB)...$(RESET)"; \
		make -C $(LIBFT_DIR) fclean; \
		echo "$(MAGENTA)âœ… LibrerÃ­a $(LIBFT_LIB) eliminada.$(RESET)"; \
	fi

# ğŸ”„ RecompilaciÃ³n completa
re: fclean all

.PHONY: all clean fclean re libs