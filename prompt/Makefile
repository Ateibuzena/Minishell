NAME = prompt.a

CC = gcc

CFLAGS = -Wall -Wextra -Werror -I. -I../builtins -I../libft 

AR = ar rcs
RM = rm -f

# ğŸ“‚ LibrerÃ­as externas
BUILTINS_DIR = ../builtins
BUILTINS_LIB = $(BUILTINS_DIR)/builtins.a

LIBFT_DIR = ../libft
LIBFT_LIB = $(LIBFT_DIR)/libft.a

# ğŸ“‚ Directorios de cÃ³digo y objetos
SRCDIR = src
SRCS = $(wildcard $(SRCDIR)/*.c)

OBJDIR = obj
OBJS = $(patsubst $(SRCDIR)/%.c, $(OBJDIR)/%.o, $(SRCS))

HEADERS = promptft.h

# ğŸ¨ Colores
RED      = \033[0;31m
GREEN    = \033[0;32m
YELLOW   = \033[0;33m
MAGENTA  = \033[0;35m
CYAN     = \033[0;36m
WHITE    = \033[0;37m
RESET    = \033[0m

# ğŸš€ CompilaciÃ³n principal
all: $(LIBFT_LIB) $(BUILTINS_LIB) $(NAME)

# ğŸ”— Compilar librerÃ­as en orden correcto
$(LIBFT_LIB):
	@echo "$(CYAN)ğŸ“¦ Compilando librerÃ­a libft...$(RESET)"
	@make -C $(LIBFT_DIR)
	@echo "$(GREEN)âœ… LibrerÃ­a libft compilada.$(RESET)"

$(BUILTINS_LIB): $(LIBFT_LIB)
	@echo "$(CYAN)ğŸ“¦ Compilando librerÃ­a builtins...$(RESET)"
	@make -C $(BUILTINS_DIR)
	@echo "$(GREEN)âœ… LibrerÃ­a builtins compilada.$(RESET)"

# ğŸ”¨ Crear archivo .a (prompt.a)
$(NAME): $(OBJDIR) $(OBJS)
	@echo "$(CYAN)ğŸ”— Creando $(NAME)...$(RESET)"
	@$(AR) $(NAME) $(OBJS)
	@echo "$(GREEN)âœ… $(NAME) creado con Ã©xito.$(RESET)"

# ğŸ“‚ Crear directorio de objetos
$(OBJDIR):
	@echo "$(CYAN)ğŸ“‚ Creando directorios de objetos...$(RESET)"
	@mkdir -p $(OBJDIR)
	@echo "$(GREEN)âœ… Directorios de objetos creados.$(RESET)"

# ğŸ— Compilar archivos `.c` en `.o`, respetando subdirectorios
$(OBJDIR)/%.o: $(SRCDIR)/%.c $(HEADERS) | $(OBJDIR)
	@echo "$(YELLOW)ğŸ”¹ Compilando $< -> $@$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(GREEN)âœ… Compilado: $@$(RESET)"

# ğŸ§¹ Limpieza de objetos
clean:
	@echo "$(RED)ğŸ—‘ï¸ Eliminando archivos objeto...$(RESET)"
	@$(RM) $(OBJS)
	@echo "$(MAGENTA)âœ… Limpieza de objetos completada.$(RESET)"

# ğŸ§¹ Limpieza total (elimina objetos y archivo .a)
fclean: clean
	@echo "$(RED)ğŸš® Eliminando archivo $(NAME)...$(RESET)"
	@$(RM) $(NAME)
	@echo "$(MAGENTA)âœ… $(NAME) eliminado.$(RESET)"

# ğŸ”„ RecompilaciÃ³n completa
re: fclean all

.PHONY: all clean fclean re
